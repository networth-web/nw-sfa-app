<table class="index-table-2">
  <!-- ヘッダー -->
  <tr>
    <th>物件名</th>
    <th>部屋</th>
  </tr>
  <!-- ボディー -->
  <% properties.each do |property| %>
    <tr>
      <td>
        <%= link_to property.name, property_path(property) %>
      </td>
      <td>
        <% property.rooms.each_with_index do |room, index| %>
          <%= room.number %>号室、
          <% index += 1 %>
          <% if index % 10 == 0 && index != 0 %>
            <br>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>